{
  "defaultSeverity": "error",

  "extends": [
    "./tslint.base.json",
    "tslint:recommended",
    "tslint-config-prettier",
    "tslint-plugin-prettier"
  ],

  "linterOptions": {
    "exclude": [
      "dist/**",
      "build/**",
      "coverage/**",
      ".cache-loader/**",
      "node_modules/**"
    ]
  },

  "rules": {
    "prettier": true,
    "object-literal-sort-keys": false,
    "radix": false,
    "variable-name": false,
    "curly": false,
    "no-console": false,
    "no-empty-interface": false,
    "ban-types": false,
    "max-classes-per-file": [true, 3],
    "no-var-requires": false,
    "member-ordering": false
  },

  "jsRules": {
    "prettier": true,
    "object-literal-sort-keys": false,
    "radix": false
  }
}
