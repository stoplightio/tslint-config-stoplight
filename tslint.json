{
  "defaultSeverity": "error",
  "extends": [
    "tslint:recommended",
    "tslint-config-prettier",
    "tslint-plugin-prettier"
  ],
  "linterOptions": {
    "exclude": [
      "dist/**",
      "build/**",
      "coverage/**",
      ".cache-loader/**",
      "node_modules/**"
    ]
  },
  "rules": {
    "prettier": [
      true,
      {
        "printWidth": 120,
        "trailingComma": "all",
        "singleQuote": true
      }
    ],
    "object-literal-sort-keys": false,
    "radix": false,
    "variable-name": false,
    "curly": false,
    "no-console": false,
    "no-empty-interface": false,
    "ban-types": false,
    "max-classes-per-file": [
      true,
      3
    ],
    "no-var-requires": false,
    "member-ordering": false,
    "no-floating-promises": true,
    "no-implicit-dependencies": [
      true,
      [
        "tests",
        "__tests__"
      ]
    ]
  },
  "jsRules": {
    "prettier": [
      true,
      {
        "printWidth": 120,
        "trailingComma": "es5",
        "singleQuote": true
      }
    ],
    "object-literal-sort-keys": false,
    "radix": false
  }
}
